# SAC Connection (OAuth 2.0)
SAC_TENANT_URL=https://cvs-pharmacy-q.us10.hcs.cloud.sap

# OAuth Client Credentials (Required)
# Get these from: SAC → System → Administration → App Integration → OAuth Clients
# IMPORTANT: OAuth client MUST be "Interactive Usage" type (NOT client_credentials)
SAC_CLIENT_ID=your_oauth_client_id
SAC_CLIENT_SECRET=your_oauth_client_secret

# OAuth Flow Configuration (Choose ONE of the following methods)
# ═══════════════════════════════════════════════════════════════════

# Option 1: Refresh Token (RECOMMENDED - Interactive Usage) ✅
# Get this by performing initial OAuth login with authorization_code flow
# The refresh token allows getting new access tokens without user interaction
SAC_REFRESH_TOKEN=your_refresh_token_from_initial_login

# Option 2: SAML Bearer Assertion ✅
# Get this from your Identity Provider (IdP) SAML assertion
# Requires SAML trust configuration between IdP and SAC
# SAC_SAML_ASSERTION=your_base64_encoded_saml_assertion

# Option 3: Authorization Code (Interactive Usage)
# Requires performing OAuth authorization_code flow
# SAC_AUTHORIZATION_CODE=your_authorization_code
# SAC_REDIRECT_URI=https://your-app-url/oauth/callback

# ═══════════════════════════════════════════════════════════════════

# Optional: Override OAuth token endpoint (auto-detected from tenant URL if not set)
# For SAC-native OAuth: https://cvs-pharmacy-q.us10.hcs.cloud.sap/oauth/token
# For XSUAA: https://cvs-pharmacy-q.authentication.us10.hana.ondemand.com/oauth/token
# SAC_OAUTH_TOKEN_URL=https://cvs-pharmacy-q.us10.hcs.cloud.sap/oauth/token

# SAC Planning Model Configuration
SAC_MODEL_ID=PRDA_PL_PLAN
# Multi-Action ID format: packageId:objectId (e.g., MULTIACTIONS:t.2:E5280280114D3785596849C3D321B820)
SAC_MULTI_ACTION_ID=MULTIACTIONS:t.2:E5280280114D3785596849C3D321B820
SAC_STORY_ID=your_story_id_optional

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server Configuration
PORT=3002
NODE_ENV=development
API_KEY=your-api-key-for-authentication

# Logging
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGIN=https://cvs-pharmacy-q.us10.hcs.cloud.sap

# Optional: Default forecast settings
DEFAULT_FORECAST_PERIOD=6
DEFAULT_VERSION_PREFIX=Forecast
